<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/quickEntry_child_scrollV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60px"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/quickEntry_child_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/quick_close_liLayout"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:background="@color/option_gray"
        android:gravity="center">

        <ImageView
            android:id="@+id/quick_close_button"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@mipmap/quick02"/>
    </LinearLayout>

</RelativeLayout>